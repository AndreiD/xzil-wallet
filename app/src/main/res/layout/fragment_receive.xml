<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >


  <ImageView
      android:id="@+id/imageView_qrcode_receive"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_gravity="center"
      android:layout_marginLeft="32dp"
      android:layout_marginRight="32dp"
      android:layout_marginTop="32dp"
      android:layout_weight="2"
      android:gravity="center"
      app:srcCompat="@drawable/ic_launcher"
      />

  <TextView
      android:id="@+id/textView_receive_ethaddress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="64dp"
      android:layout_weight="2"
      android:gravity="center"
      android:text="eth.address"
      android:textColor="@color/appcolor_grey"
      android:textIsSelectable="true"
      android:textSize="12sp"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:orientation="horizontal"
      >
    <Button
        android:id="@+id/btn_copy_clipboard"
        android:textAppearance="@style/TextAppearance.Title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_send"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Copy to Clipboard"
        android:textColor="@color/white"
        android:textSize="14sp"
        style="?android:attr/borderlessButtonStyle"
        />
    <Button
        android:id="@+id/btn_receive_share"
        android:textAppearance="@style/TextAppearance.Title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_send"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Share with Other Apps"
        android:textColor="@color/white"
        android:textSize="14sp"
        style="?android:attr/borderlessButtonStyle"
        />

  </LinearLayout>

</LinearLayout>