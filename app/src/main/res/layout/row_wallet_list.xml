<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:blockies="http://schemas.android.com/tools"
    >

  <android.support.v7.widget.CardView
      android:id="@+id/cardView_wallet"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:foreground="?android:attr/selectableItemBackground"
      card_view:cardCornerRadius="4dp"
      card_view:cardUseCompatPadding="true"
      android:focusable="true"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="4dp"
        >

      <wallet.zilliqa.utils.BlockiesIdenticon
          android:id="@+id/identicon"
          android:gravity="center_vertical"
          android:layout_gravity="center_vertical"
          android:layout_width="40dp"
          android:layout_height="40dp"
          />

      <TextView
          android:id="@+id/wallet_address"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_alignParentTop="true"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@+id/token_picture"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:padding="8dp"
          android:lines="2"
          android:text="0x0000000x000000000000x000000000000x0000000000000000"
          android:textSize="16sp"
          />



    </LinearLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>