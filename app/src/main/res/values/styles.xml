<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:buttonStyle">@style/NormalButton</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


  <style name="NormalButton" parent="Widget.AppCompat.Button.Colored">
    <item name="android:stateListAnimator">@null</item>
    <item name="android:colorButtonNormal">@color/app_blue</item>
    <item name="android:textColor">@android:color/white</item>
  </style>


  <style name="Borderless" parent="android:Widget.Material.Button.Borderless">
    <item name="fontPath">fonts/regular.ttf</item>
    <item name="android:textSize">14sp</item>

  </style>

  <style name="TextAppearance.Title" parent="android:TextAppearance">
    <item name="fontPath">fonts/bold.ttf</item>
    <item name="android:textSize">43sp</item>
  </style>

  <style name="TextAppearance.Body" parent="android:TextAppearance">
    <item name="fontPath">fonts/regular.ttf</item>
    <item name="android:textSize">14sp</item>
  </style>

</resources>
